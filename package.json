{
  "name": "chef-workstation",
  "productName": "Chef Workstation Tray",
  "version": "0.0.2",
  "description": "Tray applicaiton for Chef Workstation.",
  "repository": "https://github.com/chef/chef-workstation-tray",
  "author": "Chef Software, Inc.",
  "main": "main.js",

  "scripts": {
    "start": "electron .",
    "build": "build --linux --mac --windows",
    "publish": "build --linux --mac --windows -p always"
  },
  "build": {
    "appId": "sh.chef.chef-workstation",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/images/logo.png",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": "msi",
      "icon": "assets/images/logo.ico"
    },
    "publish": [ {
        "provider": "github"
    } ],
    "linux": {
      "target": "AppImage"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    }
  },
  "devDependencies": {
    "electron": "2.0.7",
    "electron-builder": "20.28.1",
    "electron-reload": "^1.2.5"
  },
  "dependencies": {}

}
