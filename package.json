{
  "name": "chef-workstation-app",
  "productName": "Chef Workstation App",
  "displayName": "Chef Workstation",
  "version": "0.0.14",
  "description": "Desktop application for Chef Workstation.",
  "repository": "https://github.com/chef/chef-workstation-tray",
  "author": {
    "name": "Chef Software, Inc.",
    "email": "beta@chef.io",
    "url": "https://chef.sh"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-all": "build --win --mac --linux",
    "build-mac": "build --mac",
    "build-linux": "build --linux",
    "build-windows": "build --win"
  },
  "build": {
    "appId": "sh.chef.chef-workstation",
    "electronUpdaterCompatibility": ">= 2.16",
    "mac": {
      "target": ["7z" ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/logo.png",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": [ "7z" ],
      "icon": "assets/images/logo.ico"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "linux": {
      "target": [ "7z" ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "dmg": {
      "title": "chef-workstation"
    }
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "20.28.1",
    "electron-reload": "^1.2.5"
  },
  "dependencies": {
    "electron-is": "^3.0.0",
    "electron-osx-appearance": "^0.1.1",
    "electron-updater": "3.1.1"
  }
}
