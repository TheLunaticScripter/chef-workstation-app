{
  "name": "chef-workstation",
  "productName": "Chef Workstation",
  "version": "0.0.8",
  "description": "Tray application for Chef Workstation.",
  "repository": "https://github.com/chef/chef-workstation-tray",
  "author": "Chef Software, Inc.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "build --linux --mac --win",
    "release": "build --linux --mac --win -p always"
  },
  "build": {
    "appId": "sh.chef.chef-workstation",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/logo.png",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": "msi",
      "icon": "assets/images/logo.ico"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "linux": {
      "target": "AppImage"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    }
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "20.28.1",
    "electron-reload": "^1.2.5"
  },
  "dependencies": {
    "electron-is": "^3.0.0",
    "electron-osx-appearance": "^0.1.1",
    "electron-updater": "3.1.1"
  }
}
